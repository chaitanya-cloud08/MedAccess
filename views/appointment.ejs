    <script>

 window.onload=function()
 {
   document.querySelector('.appoint-form').scrollIntoView({behavior:'smooth'});
 }

 document.getElementById("apptno").onclick = function(event) 
 {
   let appointment = Math.floor(10000 + Math.random() * 90000);
   event.preventDefault();
    alert("Your appointment number is: " + appointment);
 }



